{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node", "hardhat"],
    "outDir": "./dist",    
    "rootDir": "./",            
    "baseUrl": ".",             
    "paths": {
      "@/*": ["./*"]            
    }
  },
  "include": [
    "scripts",
    "test",                     
    "typechain",                
    "hardhat.config.ts"         
  ]
}
